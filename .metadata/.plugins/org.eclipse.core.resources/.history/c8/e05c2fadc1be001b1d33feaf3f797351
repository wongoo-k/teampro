package com.yogi.hoxy.service;

import java.util.List;

import javax.annotation.Resource;
 
import org.springframework.stereotype.Service;

import com.yogi.hoxy.daos.YogiDaoImp;
import com.yogi.hoxy.dtos.CommentDto;
 
 
@Service
public class CommentService {
 
    YogiDaoImp dao;
    
    public List<CommentDto> commentListService() throws Exception{
        
        return dao.commentList();
    }
    
    public int commentInsertService(CommentDto comment) throws Exception{
        
        return dao.commentInsert(comment);
    }
    
    public int commentUpdateService(CommentDto comment) throws Exception{
        
        return dao.commentUpdate(comment);
    }
    
    public int commentDeleteService(int cno) throws Exception{
        
        return dao.commentDelete(cno);
    }
}
